generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  username  String   @unique
  password  String
  role      String   @default("ADMIN") // ADMIN, SUPER_ADMIN, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PackageType {
  UMRAH
  HAJI
}

model Package {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  type        PackageType
  price       Decimal     @db.Decimal(15, 2) // Supports large numbers
  duration    Int         // Number of days
  departureDate String?   // e.g. "12 Agustus 2026"
  hotelMakkah String?
  hotelMakkahRating Int   @default(0) // 1-5 Stars
  hotelMadinah String?
  hotelMadinahRating Int  @default(0) // 1-5 Stars
  airline     String?
  description String      @db.Text
  amenities   Json?       // Renamed concept to "Includes" in UI
  priceExcludes Json?     // List of "Excludes"
  generalEquipment Json?  // Umrah/Haji specific equipment (e.g. Baggage, Books)
  menEquipment    Json?   // Men specific (e.g. Ihram)
  womenEquipment  Json?   // Women specific (e.g. Mukena)
  imageUrl    String?
  isFeatured  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Gallery {
  id        String   @id @default(cuid())
  title     String
  imageUrl  String
  category  String?  // e.g., "Masjidil Haram", "Hotel", "Activity"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?  // e.g., "Jamaah Umrah 2024"
  content   String   @db.Text
  avatarUrl String?
  rating    Int      @default(5)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
